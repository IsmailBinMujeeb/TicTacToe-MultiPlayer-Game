<%- include('layouts/header', {stylesheets: ['style', 'navbar', 'leaderBoard']}) %>
<%- include('layouts/navbar', { user }) %>

<main>
  <div class="leaderboard">
    <div class="leaderboard-header">Leaderboard</div>
    <table class="leaderboard-table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Username</th>
          <th>Coins</th>
        </tr>
      </thead>
      <tbody id="leaderboardBody">
        <% users.forEach((user, index) => { %>
        <tr>
          <td><%= index+1 %></td>
          <td><a href="/profile?user=<%= user.username %>"><%= user.username %></a></td>
          <td><%= user.coins %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>

</body>

</html>