<%- include('layouts/header', { stylesheets: ['navbar', 'profilePage', 'footer'], title: 'Profile' }) %>
<%- include('layouts/navbar', {user}) %>

<main>
  <div class="profile-container">
    <div class="profile-picture">
      <img src="<%= userProfile.profilePic %>" alt="Profile Pic">
    </div>
    <div class="profile-details">
      <h1><%= userProfile.name %></h1>
      <p>@<%= userProfile.username %> â€¢ <img src="/images/coin.gif" alt="coin gif" width="16px" height="16px"> <%= userProfile.coins %></p>
      <% if (userProfile.username == user.username) { %>
      <a href="/edit-profile" class="btn">Customize Profile</a>
      <% } %>
    </div>
  </div>
  <% if (userProfile.username == user.username) { %>
    <a href="/logout" class="logout-link">Logout</a>
    <% } %>
</main>

<%- include('layouts/footer', { scripts: ['hamburger'] }) %>